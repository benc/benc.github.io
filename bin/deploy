#!/bin/bash
# Bepaal de BASEDIR
export BASEDIR
BASEDIR="$(cd "$(dirname "${BASH_SOURCE[0]}")"; cd ..; pwd)"
echo BASEDIR is $BASEDIR
echo

echo -e "\033[0;32mDeploying updates to GitHub...\033[0m"

# Bouw site
cd $BASEDIR
hugo

# Deploy
cd "$BASEDIR/public"
git add .
msg="rebuilding site `date`"
if [ $# -eq 1 ]
  then msg="$1"
fi
git commit -m "$msg"
git push origin master
cd "$BASEDIR"